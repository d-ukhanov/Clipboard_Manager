<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80sp">

        <LinearLayout
            android:id="@+id/main_layout"
            android:background="@color/background"
            android:orientation="horizontal"
            android:showDividers="beginning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:layout_weight="10"
                android:layout_width="0sp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/main_date"
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:text="Date"
                    android:textColor="@color/sys_text"
                    android:gravity="center_vertical"
                    android:textSize="12sp" />


                <LinearLayout
                    android:layout_below="@id/main_date"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50sp">

                    <ImageButton
                        android:id="@+id/main_star"
                        android:src="@drawable/icon_star_off"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_gravity="center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="4sp"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/main_text"
                        android:gravity="center_vertical|start"
                        android:background="?android:attr/selectableItemBackground"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:lineSpacingMultiplier="1.3"
                        android:text="text"
                        android:textSize="16sp"
                        android:textColor="@color/secondary_text_default_material_light"
                        android:layout_height="50sp"
                        android:layout_width="match_parent"
                        tools:ignore="HardcodedText,PrivateResource" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_gravity="top"
                android:layout_margin="6sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/main_delete"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="21sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="@string/note_delete"
                    android:padding="8sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_delete" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_gravity="top"
                android:layout_margin="6sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/main_time"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:text="Time"
                    android:textColor="@color/sys_text"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

                <ImageButton
                    android:id="@+id/main_share"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_marginTop="2sp"
                    android:src="@drawable/icon_share"
                    android:layout_below="@id/main_time"
                    android:layout_gravity="center"
                    android:layout_width="38sp"
                    android:layout_height="38sp"
                    android:padding="8sp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/note_share" />
            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>

