<resources>
    <style name="AppView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal_dark</item>
        <item name="colorAccent">@color/sys_text</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>
    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>
</resources>
